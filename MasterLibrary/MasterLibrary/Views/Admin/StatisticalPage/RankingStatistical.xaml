    <Page.Resources>
        <local:IndexConverter x:Key="IndexConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>

        <!---LEFT-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="30*" />
                <RowDefinition Height="60*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        Margin="30,10,0,0"
                        Grid.Row="0">
                <!---PERIOD-->
                <StackPanel Margin="0,10,0,0">
                    <ComboBox Width="200"
                              FontSize="20"
                              x:Name="periodbox1"
                              SelectedIndex="0"
                              SelectedItem="{Binding SelectedRankingPeriod}"
                              SelectionChanged="periodbox1_SelectionChanged"
                              Loaded="periodbox1_Loaded">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Loaded">
                                <i:InvokeCommandAction Command="{Binding ChangeRankingPeriodML}"
                                                       CommandParameter="{Binding ElementName=periodbox1}" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ChangeRankingPeriodML}"
                                                       CommandParameter="{Binding ElementName=periodbox1}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ComboBoxItem>Theo năm</ComboBoxItem>
                        <ComboBoxItem>Theo tháng</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <!---TIME-->
                <StackPanel Margin="30,10,0,0">
                    <ComboBox Width="170"
                              FontSize="20"
                              x:Name="Time1"
                              SelectedIndex="2"
                              SelectedItem="{Binding SelectedRankingTime,Mode=OneWayToSource}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Loaded">
                                <i:InvokeCommandAction Command="{Binding ChangeRankingPeriodML}"
                                                       CommandParameter="{Binding ElementName=Time1}" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ChangeRankingPeriodML}"
                                                       CommandParameter="{Binding ElementName=Time1}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                </StackPanel>
            </StackPanel>


            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="10,10,0,10">

                <materialDesign:Card Width="610"
                                     UniformCornerRadius="5">
                    <Grid>
                        <!--<ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     Value="0"
                                     IsIndeterminate="True"
                                     Height="Auto"
                                     Margin="35,20,177,20"
                                     Width="Auto"
                                     Foreground="#FF455345" />-->
                        <Image Source="/Resources/Images/rank1.png"
                                   HorizontalAlignment="Left"
                                   Margin="227,0,0,0"
                                   Width="162" />

                        <StackPanel   Margin="180,45,174,0"
                                      Width="200"
                                      Background="Transparent">
                            <Label Content="{Binding Top5Customer[0].TENKH}"
                                   FontWeight="Bold"
                                   HorizontalContentAlignment="Center"
                                   FontSize="15" />
                            <Label Content="{Binding Top5Customer[0].ExpenseStr}"
                                   HorizontalContentAlignment="Center"
                                   FontSize="15" />
                            <Label Content="Hạng nhất"
                                   Margin="0 50 0 0"
                                   VerticalAlignment="Bottom"
                                   HorizontalContentAlignment="Center" />
                        </StackPanel>

                        <Image Source="/Resources/Images/rank2.png"
                                   HorizontalAlignment="Left"
                                   Margin="42,19,0,1"
                                   Width="152" />

                        <StackPanel   Margin="-10,45,364,0"
                                      Width="200"
                                      Background="Transparent">
                            <Label Content="{Binding Top5Customer[1].TENKH}"
                                   FontWeight="Bold"
                                   HorizontalContentAlignment="Center"
                                   FontSize="15" />
                            <Label Content="{Binding Top5Customer[1].ExpenseStr}"
                                   HorizontalContentAlignment="Center"
                                   FontSize="15" />
                            <Label Content="Hạng hai"
                                   Margin="0 50 0 0"
                                   HorizontalContentAlignment="Center" 
                                   VerticalAlignment="Bottom"/>
                        </StackPanel>

                        <Image Source="/Resources/Images/rank3.png"
                                   HorizontalAlignment="Left"
                                   Margin="406,0,0,0"
                                   Width="152" />

                        <StackPanel   Margin="354,45,0,0"
                                      Width="200"
                                      Background="Transparent">
                            <Label Content="{Binding Top5Customer[2].TENKH}"
                                   FontWeight="Bold"
                                   HorizontalContentAlignment="Center"
                                   FontSize="15" />
                            <Label Content="{Binding Top5Customer[2].ExpenseStr}"
                                   HorizontalContentAlignment="Center"
                                   FontSize="15" />
                            <Label Content="Hạng ba"
                                   Margin="0 50 0 0"
                                   VerticalAlignment="Bottom"
                                   HorizontalContentAlignment="Center" />
                        </StackPanel>

                    </Grid>

                </materialDesign:Card>

            </StackPanel>

