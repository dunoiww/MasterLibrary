            <Label Grid.RowSpan="3"
                   Content="Top 5 khách hàng chi tiêu nhiều nhất"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   FontSize="25"
                   Margin="10, 0, 0, 62" />
            <materialDesign:Card Margin="10,4,10,18"
                                 UniformCornerRadius="5"
                                 Height="320"
                                 VerticalAlignment="Bottom"
                                 Grid.Row="2">
                <ListView ItemsSource="{Binding Top5Customer}"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListView.View>

                        <GridView>
                            <GridViewColumn Header="STT"
                                            Width="90">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock  Text="{Binding RelativeSource={RelativeSource FindAncestor, 
                                         AncestorType={x:Type ListViewItem}}, 
                                         Converter={StaticResource IndexConverter}}"
                                                    FontSize="18"
                                                    Margin="24,0,0,0" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Mã khách hàng"
                                            Width="160">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding MAKH}"
                                                   FontSize="18"
                                                   Height="34" 
                                                   Margin="18, 0, 0, 0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Tên khách hàng"
                                            Width="160">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TENKH}"
                                                   FontSize="18" 
                                                   Margin="18, 0, 0, 0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Chi tiêu">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ExpenseStr}"
                                                   FontSize="18"
                                                   Margin="20,0,0,0" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </materialDesign:Card>
        </Grid>


        <!---RIGHT-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="30*" />
                <RowDefinition Height="60*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        Margin="30,10,0,0"
                        Grid.Row="0">
                <!---PERIOD-->
                <StackPanel Margin="0,10,0,0">
                    <ComboBox Width="200"
                              FontSize="20"
                              x:Name="periodbox2"
                              SelectedIndex="0"
                              SelectedItem="{Binding SelectedBestSellPeriod}"
                              SelectionChanged="periodbox2_SelectionChanged"
                              Loaded="periodbox2_Loaded">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Loaded">
                                <i:InvokeCommandAction Command="{Binding ChangeBestSellPeriodML}"
                                                       CommandParameter="{Binding ElementName=periodbox2}" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ChangeBestSellPeriodML}"
                                                       CommandParameter="{Binding ElementName=periodbox2}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ComboBoxItem>Theo năm</ComboBoxItem>
                        <ComboBoxItem>Theo tháng</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <!---TIME-->
                <StackPanel Margin="30,10,0,0">
                    <ComboBox Width="170"
                              FontSize="20"
                              x:Name="Time2"
                              SelectedIndex="2"
                              SelectedItem="{Binding SelectedBestSellTime,Mode=OneWayToSource}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Loaded">
                                <i:InvokeCommandAction Command="{Binding ChangeBestSellPeriodML}"
                                                       CommandParameter="{Binding ElementName=Time2}" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ChangeBestSellPeriodML}"
                                                       CommandParameter="{Binding ElementName=Time2}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                </StackPanel>
            </StackPanel>


            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="10,10,10,10">

                <materialDesign:Card Width="610"
                                     UniformCornerRadius="5">
                    <Grid>
                        <lvc:CartesianChart Series="{Binding Top5BookData,UpdateSourceTrigger=PropertyChanged}">
                            <lvc:CartesianChart.AxisX>
                                <lvc:AxesCollection>
                                    <lvc:Axis MinValue="1">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator Step="1" />
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:AxesCollection>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Triệu đồng"
                                          FontFamily="arial"
                                          MinValue="0" />
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>

                </materialDesign:Card>

            </StackPanel>

            <Label Grid.RowSpan="3"
                   Content="Top 5 sách doanh thu cao nhất"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   FontSize="25"
                   Margin="10, 0, 0, 62" />
            <materialDesign:Card Margin="10,4,10,18"
                                 UniformCornerRadius="5"
                                 Height="320"
                                 VerticalAlignment="Bottom"
                                 Grid.Row="2">
                <ListView ItemsSource="{Binding Top5Book}"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListView.View>

                        <GridView>
                            <GridViewColumn Header="STT"
                                            Width="90">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock  Text="{Binding RelativeSource={RelativeSource FindAncestor, 
                                         AncestorType={x:Type ListViewItem}}, 
                                         Converter={StaticResource IndexConverter}}"
                                                    FontSize="18"
                                                    Margin="24,0,0,0" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Tên sách"
                                            Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TenSach}"
                                                   FontSize="18"
                                                   Height="34" 
                                                   Margin="18, 0, 0, 0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Doanh thu"
                                            Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding tonggiaStr}"
                                                   FontSize="18" 
                                                   Margin="18, 0, 0, 0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Số sách bán ra">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding soluongban}"
                                                   FontSize="18"
                                                   Margin="20,0,0,0" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </materialDesign:Card>

        </Grid>
    </Grid>
</Page>
